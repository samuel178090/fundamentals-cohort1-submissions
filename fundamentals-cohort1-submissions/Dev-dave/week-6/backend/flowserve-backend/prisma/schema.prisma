datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique
  balance     Float         @default(0)
  createdAt   DateTime      @default(now())
  transactions Transaction[]
}

model Transaction {
  id        Int      @id @default(autoincrement())
  userId    Int
  amount    Float
  type      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
