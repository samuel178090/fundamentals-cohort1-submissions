{
  "name": "devconnect-backend",
  "version": "1.0.0",
  "description": "DevConnect API - TDD Approach",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage --watchAll=false --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 10000,
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  },
  "keywords": [
    "tdd",
    "api",
    "collaboration"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  }
}